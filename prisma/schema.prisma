generator client {
  provider = "prisma-client-js"
  output   = "../src/generated/prisma"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
  directUrl = env("DIRECT_DATABASE_URL") // Conexi√≥n directa (para migraciones)
}

model Reserva {
  id        Int      @id @default(autoincrement())
  nombre    String
  fecha     DateTime
  createdAt DateTime @default(now())
}

model User {
  id       Int    @id @default(autoincrement())
  name     String
  email    String @unique
  password String
  role     String @default("user")
}